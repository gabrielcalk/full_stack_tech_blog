<section class="mt-5">
    <section class="w-75 mt-4 box_tech">
        <form>
            <h3 class="text-center m-1">Update Your Post</h3>
        <div class="m-2 mt-3">
            <label for="title">Title:</label>
            <br>
            <input class="w-100" id="title_update" type="text" name="title" value="{{post_input_data.title}}">
            <br>
        </div>
        <div class="m-2">
            <label for="content">Content:</label>
            <br>
            <textarea class="w-100" id="content_update" type="text" name="content">{{post_input_data.description}}</textarea>
            <br>
        </div>
        <section class="d-flex justify-content-center">
                <button id="post" class="p-2 px-3 my-3 rounded">Update Post</button>
        </section>
        </form>
    </section>
</section>
<script src="/js/update.js"></script>